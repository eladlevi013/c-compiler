// EX3
function main():void
{
	var x:char*;
	string y[10];
	var z:char;
	
	y = "foobar";
	x = &y[5];
	z = *(x - 5);
	y = "barfoo";
	y[5] = *x;
}

/////////////////////////////////////////////
// EX4
function main():void
{
	var x:int;
	while(x > 6)
	{
		if(x == 6)
		{
			x = x + 6;
		}
		else 
		{
			x = x - 6;
		}
	}
}

/////////////////////////////////////////////
// EX5
function main(): void
{
	var x:int;
	do 
	{
		x = 6;
		if(x == 6)
		{
			x = x + 6;
		}
	} while(x < 10);
}

