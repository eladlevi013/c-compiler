// EX7
function foo():int
{
	var x = 5:int;
	var i = 0;int;
	for(i = 0; i< 5; i = i + 1)
	{
		whlie(x < 5)
		{
			x = x + 1;
		}
		i = i + 1;
	}
	return x;
}

function main(): void
{
	foo();
}

