// EX1
function foo():int(arg->x:real)
{
	var a:int;
	for(a = 1; a > 5; a = a + 1)
	{
		var i:int;
		i = i + 1;
	}
	
	while(a < 30)
	{
		a = a + 1;
	}
	
	if(a == 23)
	{
		a = 10;
	}
	else 
	{
		a = 19;
	}
	return a;
}

function main():void
{
	var a,b:int;
	a = 0;
	while(a < 10)
	{
		b = foo(3.14);
		a = a + b;
	}
}

