function foo():int
{
	var x:int;
	var y:int*;
	x = 5;
	y = &x;
	*y = 6;
	x = 6;
	if(&x == y && *y == x)
	{
		*y = 9;
	}
	{
		var x:char*;
		string[10] y;
		var z:char;
		y = "fooBar";
		x = &y[5];
		z = *(x - 5);
		y = "barfoo";
		{
			var y:int;
			x = "asd";
			y = 2;
			{
				x = "asd";
			}
			y = 3;
		}
	}
	return 0;
}

